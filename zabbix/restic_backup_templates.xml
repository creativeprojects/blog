                                    <priority>HIGH</priority>
                                    <description>Last profile was running more than 30 hours ago</description>
                                    <manual_close>YES</manual_close>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
